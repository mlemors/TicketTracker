<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F3F3F3" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="White" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#2C2C2C" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666" />
    <SolidColorBrush x:Key="BorderBrush" Color="#E1E1E1" />
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="#F8F8F8" />
    <SolidColorBrush x:Key="NavigationHoverBrush" Color="#F0F0F0" />
    <SolidColorBrush x:Key="NavigationSelectedBrush" Color="#E8E8E8" />

</ResourceDictionary>